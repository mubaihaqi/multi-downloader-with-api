---
import "../styles/global.css";
import MainLayout from "../layouts/main";
import YoutubeLayout from "../layouts/ytmain";
import InstagramLayout from "../layouts/igmain";
import TiktokLayout from "../layouts/ttmain";
import TwitterLayout from "../layouts/twmain";
import SpotifyLayout from "../layouts/spmain";
import PinterestLayout from "../layouts/pinmain";
import ThreadsLayout from "../layouts/thdmain";
import XiaohongshuLayout from "../layouts/xhzmain";
import Navbar from "./navbar";
---

<div
  id="container"
  class="flex flex-col h-auto w-screen justify-start bg-base-200"
>
  <Navbar client:load />
  <MainLayout client:load />
  <InstagramLayout client:load />
  <TiktokLayout client:load />
  <PinterestLayout client:load />
  <TwitterLayout client:load />
  <SpotifyLayout client:load />
  <YoutubeLayout client:load />

  <div class="relative w-full h-full mt-8">
    <div
      class="absolute inset-0 flex items-center justify-center z-20 pointer-events-none"
    >
      <div
        class="bg-base-100/90 p-4 py-14 rounded-xl shadow-2xl border-2 border-base-content/10 max-w-md w-full mx-4 text-center"
      >
        <p class="font-semibold text-lg text-base-content">
          Fitur ini belum tersedia atau masih dalam pengembangan <br />Harap
          sabar menunggu ya!!...
        </p>
      </div>
    </div>
    <div
      class="flex flex-col w-full h-full blur-xs pointer-events-none relative z-10"
    >
      <ThreadsLayout client:load />
      <XiaohongshuLayout client:load />
    </div>
  </div>
</div>
